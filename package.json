{
  "name": "habit-tracker",
  "version": "1.0.0",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "dev:api": "bun run --filter @habit-tracker/api dev",
    "dev:web": "bun run --filter @habit-tracker/web dev",
    "build": "bun run --filter '*' build",
    "build:api": "bun run --filter @habit-tracker/api build",
    "build:web": "bun run --filter @habit-tracker/web build",
    "db:migrate": "bun run --filter @habit-tracker/api db:migrate",
    "db:generate": "bun run --filter @habit-tracker/api db:generate",
    "db:studio": "bun run --filter @habit-tracker/api db:studio",
    "lint": "bun run --filter '*' lint",
    "typecheck": "bun run --filter '*' typecheck"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/supertest": "^6.0.3",
    "pino-pretty": "^13.1.3",
    "supertest": "^7.2.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3"
  }
}
